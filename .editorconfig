root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.tsv]
indent_style = tab

[*.patch]
trim_trailing_whitespace = false

[*.{yml,yaml,neon*,lua,scm,xml,md,toml,json,jsonc}]
indent_size = 2

[**/treesitter/**]
indent_size = 2
