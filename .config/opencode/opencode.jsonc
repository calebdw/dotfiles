{
    "$schema": "https://opencode.ai/config.json",
    "lsp": {
        "php intelephense": {
            "disabled": true
        },
        "phpactor": {
            "command": [
                "~/.local/share/nvim/mason/bin/phpactor",
                "language-server"
            ],
            "extensions": [
                ".php"
            ],
            "initialization": {
                "indexer.follow_symlinks": true,
                "language_server_phpstan.enabled": true
            }
        }
    },
    "mcp": {
        "voice-mode": {
            "type": "local",
            "command": [
                "uvx",
                "--refresh",
                "voice-mode"
            ],
            "enabled": true,
            "environment": {
                "xVOICEMODE_PREFER_LOCAL": "true",
                "xVOICEMODE_ALWAYS_TRY_LOCAL": "true",
                "VOICEMODE_DEBUG": "false",
                "VOICEMODE_SAVE_AUDIO": "false",
                "VOICEMODE_TTS_SPEED": "1.5"
            }
        }
    },
    "experimental": {
        // 5 minutes, prevent voice mode from timing out
        "mcp_timeout": 6000000
    },
    "model": "anthropic/claude-opus-4-5",
    "plugin": [
        "opencode-anthropic-auth@0.0.8"
    ],
    "theme": "system"
}
